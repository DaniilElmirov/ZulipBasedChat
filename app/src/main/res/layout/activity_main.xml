<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/figma_background_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.elmirov.course.MessageLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/set_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_avatar" />

    <Button
        android:id="@+id/set_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_name" />

    <Button
        android:id="@+id/set_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_message" />

    <Button
        android:id="@+id/add_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_reaction" />
</LinearLayout>

