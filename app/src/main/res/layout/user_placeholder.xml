<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_18"
    android:layout_marginLeft="@dimen/margin_16">

    <View
        android:id="@+id/avatar"
        android:layout_width="@dimen/placeholder_64"
        android:layout_height="@dimen/placeholder_64"
        android:background="@drawable/avatar_shimmer_shape"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/name"
        android:layout_width="@dimen/placeholder_160"
        android:layout_height="@dimen/placeholder_24"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_8"
        android:background="?attr/background_900"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/email"
        android:layout_width="@dimen/placeholder_160"
        android:layout_height="@dimen/placeholder_24"
        android:layout_marginTop="@dimen/margin_4"
        android:background="?attr/background_900"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name" />

</androidx.constraintlayout.widget.ConstraintLayout>